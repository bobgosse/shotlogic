{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/parse-screenplay.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/analyze-scene.ts": {
      "maxDuration": 60,
      "memory": 512
    },
    "api/projects/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  }
}
